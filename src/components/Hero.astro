---
const weddingDate = "2026.6.28";
const groomName = "KoChun Wu";
const brideName = "JiaYu Yao";
---

<section
    class="relative h-screen w-full flex items-center justify-center overflow-hidden"
>
    <div class="absolute inset-0 z-0">
        <img
            src="/images/hero-photo.webp"
            class="w-full h-full object-cover brightness-[0.8]"
            alt="Wedding Cover"
        />
    </div>

    <div class="relative z-10 text-center text-white space-y-6 px-4">
        <p
            class="font-['Playfair_Display'] italic text-xl md:text-2xl tracking-[0.2em] opacity-90"
        >
            Save the Date
        </p>

        <h1 class="text-5xl md:text-7xl font-light tracking-[0.3em] my-8">
            {groomName}
            <span class="text-3xl md:text-4xl">&</span>
            {brideName}
        </h1>

        <div class="flex items-center justify-center space-x-4">
            <div class="h-[1px] w-12 bg-white/50"></div>
            <p class="text-lg md:text-xl tracking-widest">{weddingDate}</p>
            <div class="h-[1px] w-12 bg-white/50"></div>
        </div>

        <div class="pt-10">
            <a
                href="#rsvp"
                class="inline-block border border-white px-10 py-3 rounded-full hover:bg-white hover:text-black transition-all duration-500 ease-in-out text-sm tracking-widest"
            >
                VIEW INVITATION
            </a>
        </div>
    </div>
</section>
